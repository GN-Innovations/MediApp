<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="nyshgale.android.mediapp.MainActivity">

	<fragment
		android:id="@+id/fragment_current_patient__activity_main"
		android:name="nyshgale.android.mediapp.FragmentCurrentPatient"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		tools:layout="@layout/fragment_current_patient"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/fragment_current_patient__activity_main">

		<fragment
			android:id="@+id/fragment_diagnose__activity_main"
			android:name="nyshgale.android.mediapp.FragmentDiagnose"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="false"
			android:layout_centerInParent="false"
			android:layout_centerVertical="true"
			tools:layout="@layout/fragment_diagnose"/>
	</RelativeLayout>

</RelativeLayout>