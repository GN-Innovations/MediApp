<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:divider="@android:drawable/divider_horizontal_textfield"
              android:orientation="vertical"
              android:showDividers="middle"
              tools:context="nyshgale.android.mediapp.ActivityDiagnose">

	<TextView
		android:id="@+id/textview_datetime__activity_diagnose"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:padding="@dimen/dimen_4"
		android:text="@string/diagnosis_datetime"
		android:textAppearance="@style/AppTheme.TextAppearance.Caption"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/linearlayout_messages__activity_diagnose"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="@dimen/dimen_8"/>

	</ScrollView>

</LinearLayout>
