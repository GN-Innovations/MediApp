<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/Background"
              android:divider="@android:drawable/divider_horizontal_textfield"
              android:orientation="vertical"
              android:showDividers="middle">

	<TextView
		android:id="@+id/textview_title__info_library_cause"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/Background.Title"
		android:gravity="center"
		android:padding="@dimen/dimen_8"
		android:text="@string/cause"
		android:textAppearance="@style/AppTheme.TextAppearance.Title"/>

	<TextView
		android:id="@+id/textview_details__info_library_cause"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/dimen_8"
		android:text="@string/cause_details"
		android:textAppearance="@style/AppTheme.TextAppearance.Description"/>

</LinearLayout>
