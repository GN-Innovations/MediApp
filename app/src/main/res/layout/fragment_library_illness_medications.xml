<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="nyshgale.android.mediapp.library.FragmentIllnessMedications">

	<TextView
		android:id="@+id/textview_medications__fragment_library_illness_medications"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:paddingBottom="@dimen/dimen_8"
		android:paddingTop="@dimen/dimen_8"
		android:text="@string/illness_medications"
		android:textAppearance="@style/AppTheme.TextAppearance.Label"/>

	<ImageButton
		android:id="@+id/imagebutton_add__fragment_library_illness_medications"
		style="@style/AppTheme.Button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/dimen_16"
		android:layout_marginStart="@dimen/dimen_16"
		android:layout_toEndOf="@+id/textview_medications__fragment_library_illness_medications"
		android:layout_toRightOf="@+id/textview_medications__fragment_library_illness_medications"
		android:contentDescription="@string/function_new"
		android:src="@android:drawable/ic_menu_add"/>

	<LinearLayout
		android:id="@+id/linearlayout_medications__fragment_library_illness_medications"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textview_medications__fragment_library_illness_medications"
		android:orientation="vertical"/>

</RelativeLayout>
